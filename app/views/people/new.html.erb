
<h1>Add new person</h1>
<%= form_for @people do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.label :eye_color %>
  <%= f.text_field :eye_color %>

  <%= f.label :hair_color %>
  <%= f.text_field :hair_color %>


  <%= f.label :gender %>
  <%= f.text_field :gender %>

  <%= check_box_tag(:alive) %>
  <%= label_tag(:alive, "Alive") %>



  <%= f.submit %>
<% end %>